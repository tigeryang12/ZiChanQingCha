<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@+id/bottom"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/zhuye_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/zhuye_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="14px"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_sy" />

            <TextView
                android:id="@+id/zhuye_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@drawable/tab_title_color"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/about_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="14px"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_sy" />

            <TextView
                android:id="@+id/about_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textColor="@drawable/tab_title_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
